<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>RazorPay Demo</title>  
</head>
<body>
  <h1> Hello Payment Page</h1>
  <h2>Make payment of Rs. 500 for successfull registeration in workshop</h2>
  <button id="rzp-button1">Pay Rs.500 </button>
<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<script>
  document.getElementById("rzp-button1").oneClick = async function (e) {
    e.preventDefault();

    let response = await fetch("/payment", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
      },
      body: JSON.stringify({
        amount: 50000,
      }),
    });

    let orderData = await response.json();
    console.log(orderData);

    var options = {
      key: "rzp_test_42HT4PuykzwauI",
      amount: "50000",
      currency: "INR",
      order_id: orderData.id,
      handler: function (response){
        alert(response.razorpay_payment_id);
        alert(response.razorpay_order_id);
        alert(response.razorpay_signature);
      },
    };
    var rzp1 = new RAzorpay(options);

    rzp1.open();
  };
  </script>
  </body>
  </html>
  