<body>
  <div class="wrapper">
    <div class="payment">
      <div class="payment-logo">
        <p>payment</p>
      </div>
      <h2>Razorpay Payment</h2>
      <div id="rzp-button1" class="btn">
        Pay Rs.500
      </div>

    </div>
  </div>
  </div>
  <script src="model/payment.js"></script>
  <!-- <button id="rzp-button1">Pay</button> -->
  <script>
    document.getElementById('rzp-button1').onclick = async function (e) {
      e.preventDefault();
      let response = await fetch("/payment", {
        method: "POST",
        Headers: {
          "content-type": "application/json",
        },
        body: JSON.stringify({
          amount: 1000,
          currency: "INR",
        }),
      });
      let orderData = await response.json();
      var options = {
        key: "rzp_test_42HT4PuykzwauI",
        amount: "1000  ",
        currency: "INR",
        name: "hashez orkshop",
        description: "Test Transaction",
        order_id: orderData.order.id,
        callback_url: "http://localhost:3000/paymentverification",
        theme: {
          color: "#3399cc"
        }
      };
      var rzp1 = new Razorpay(options);
      rzp1.open();
    }
  </script>
</body >

